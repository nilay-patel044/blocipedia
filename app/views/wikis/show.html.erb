<div>
  <h1>
    <%= @wiki.title %> <br>
    <small>
      Created <%= time_ago_in_words(@wiki.created_at) %>.
      <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success btn-small' %>
      <%= link_to "Delete", @wiki, method: :delete, class: 'btn btn-danger btn-small', data: {confirm: "Are you sure you want to PERMANENTLY delete this Wiki?"} %>
    </small>
  </h1>
</div>

<div class="row">
  <div class="col-md-8">
    <p><%= @wiki.body %></p>
  </div>
</div>
